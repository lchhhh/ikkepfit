                  <div style="margin:0px 5px 0px 5px">
                       <input id="Button1" type="button" value=" 注 册 " onclick="location.href = 'reg.aspx';" style="width:60px;height: 35px;" class="btn btn-primary ml-auto"/>
                  </div>

